// components/Navigation.js
'use client'

import Link from 'next/link'
import { usePathname } from 'next/navigation'
import { useState } from 'react'

export default function Navigation() {
  const pathname = usePathname()
  const [open, setOpen] = useState(false)

  const links = [
    { href: '/', label: '// home' },
    { href: '/#expertise', label: '// expertise' }, // anchor to expertise section
    { href: '/projects', label: '// work' },
    { href: '/contact', label: '// contact' }
  ]

  const isActive = (href) => {
    if (href === '/') return pathname === '/'
    if (href.startsWith('/projects')) return pathname.startsWith('/projects')
    if (href.startsWith('/#')) {
      // anchors are handled client-side; keep default false
      return false
    }
    return pathname === href
  }

  const baseLink = 'text-[11px] uppercase tracking-[0.35em] transition-colors hover:text-white'
  const idle = 'text-zinc-400'
  const active = 'text-indigo-400 font-medium'

  return (
    <header className="sticky top-0 z-50 border-b border-zinc-800 bg-zinc-950/80 backdrop-blur">
      <nav className="mx-auto flex max-w-5xl items-center justify-between px-4 py-3">
        <Link href="/" className="text-lg font-semibold text-white">
          Thomas<span className="text-indigo-500">.</span>
        </Link>

        <ul className="hidden items-center gap-6 sm:flex">
          {links.map(link => (
            <li key={link.href}>
              <Link
                href={link.href}
                className={`${baseLink} ${isActive(link.href) ? active : idle}`}
              >
                {link.label}
              </Link>
            </li>
          ))}
        </ul>

        <button
          aria-label="Toggle menu"
          aria-expanded={open}
          aria-controls="mobile-menu"
          onClick={() => setOpen(o => !o)}
          className="sm:hidden rounded px-3 py-2 text-sm text-zinc-300 hover:bg-zinc-800/60"
        >
          {open ? 'Close' : 'Menu'}
        </button>
      </nav>

      {open && (
        <div id="mobile-menu" className="sm:hidden border-t border-zinc-800 bg-zinc-950/80 backdrop-blur">
          <ul className="mx-auto max-w-5xl px-4 py-3 space-y-3">
            {links.map(link => (
              <li key={link.href}>
                <Link
                  href={link.href}
                  onClick={() => setOpen(false)}
                  className={`block ${baseLink} ${isActive(link.href) ? active : 'text-zinc-400'}`}
                >
                  {link.label}
                </Link>
              </li>
            ))}
          </ul>
        </div>
      )}
    </header>
  )
}
